<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/relative_back">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QuizSense"

        android:layout_marginTop="10dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAlignment="center"/>


    <TextView
        android:id="@+id/flaschcard_question"
        android:layout_width="344dp"
        android:layout_height="176dp"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/background"
        android:paddingTop="55dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="33sp"
        android:textStyle="bold" />




    <TextView
        android:id="@+id/flaschcard_answer"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/flaschcard_question"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="102dp"
        android:background="@drawable/back_answer"
        android:paddingTop="10dp"
        android:text=""
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/add_question"
        android:layout_width="79dp"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="163dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/plus" />

    <ImageView
        android:id="@+id/next_question"
        android:layout_width="62dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="314dp"
        android:layout_marginBottom="123dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/next" />

    <ImageView
        android:id="@+id/delete_question"
        android:layout_width="62dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="122dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/recycle" />


</RelativeLayout>
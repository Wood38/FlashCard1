<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Flash Card App"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textStyle="bold"

        />



    <TextView
        android:id="@+id/flaschcard_question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="60dp"
        android:foreground="@drawable/border_style"
        android:background="@drawable/background"
        android:text="Quelle est la plus grande foret du monde?"
        android:textAlignment="center"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/flaschcard_answer"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/flaschcard_question"
        android:layout_marginTop="80dp"
        android:background="@drawable/back_answer"
        android:text="Amazonie"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone" />





</RelativeLayout>
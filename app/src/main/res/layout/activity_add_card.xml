<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_Card_Activity"
    android:background="@drawable/relative_back">


    <TextView
        android:layout_width="372dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="23dp"
        android:background="@drawable/background"
        android:paddingTop="10dp"
        android:text="Add a new Question and Answer"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="22dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/add_new_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="171dp"
        android:layout_marginEnd="0dp"
        android:hint="Add a new question"
        android:textColor="@color/white"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/add_new_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="378dp"
        android:layout_marginEnd="-9dp"
        android:hint="Add the answer"
        android:textAlignment="center"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/delete_question"
        android:layout_width="79dp"
        android:layout_height="72dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="51dp"
        android:src="@drawable/close" />

    <ImageView
        android:id="@+id/download_question"
        android:layout_width="79dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="319dp"
        android:layout_marginBottom="35dp"
        android:src="@drawable/downloadfile" />

</RelativeLayout>